<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.classqa.data.management.HallMapper">
    <select id="selectAllHall" resultMap="Hall">
        select * from hall
    </select>

    <select id="selectHallById" resultMap="Hall">
        select * from hall where id = #{hallId}
    </select>

    <insert id="insertHall" keyProperty="id" useGeneratedKeys="true" parameterType="com.example.classqa.po.Hall">
        insert into hall(name,column,row)
        value (#{name},#{column},#{row})
    </insert>

    <delete id="deleteHall">
        delete from hall where id=#{id}
    </delete>

    <update id="updateHall">
        update hall set name=#{name},column=#{column},row=#{row} where id=#{id}
    </update>

    <resultMap id="Hall" type="com.example.classqa.po.Hall">
    </resultMap>

</mapper>